{
  "uid": "api_monitoring_dashboard_v2",
  "title": "API",
  "description": "Monitoring API health, latency, error rates, throughput, and system resources based on provided metrics.",
  "tags": ["api", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 3,
  "editable": true,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "API Uptime",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{job=~\"api|predict_api_service\"}",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dthms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "orange", "value": 300},
              {"color": "green", "value": 3600}
            ]
          },
          "mappings": [],
          "color": {
            "mode": "thresholds"
          },
          "decimals": 0
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto",
        "showUnfilled": true
      }
    },
    {
      "id": 12,
      "title": "Data Drift Score",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "data_drift_score{job=\"evidently_drift_api\"}",
          "legendFormat": "Drift Score",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.3 },
              { "color": "red", "value": 0.7 }
            ]
          },
          "mappings": [],
          "color": {
            "mode": "thresholds"
          },
          "max": 1,
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "showThresholdMarkers": true,
        "showThresholdLabels": false
      },
      "description": "Score de dérive des données (0-1) - Seuil d'alerte à 0.3"
    },
    {
      "id": 2,
      "title": "Request Rate (RPS)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"api\"}[1m])) by (job)",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 3,
      "title": "P95 Latency (ms)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"api\"}[5m])) by (le, job)) * 1000",
          "legendFormat": "P95 Latency {{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      }
    },
    {
      "id": 4,
      "title": "Average Response Time (ms)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_sum{job=\"api\"}[1m])) by (job) / sum(rate(http_request_duration_seconds_count{job=\"api\"}[1m])) by (job) * 1000",
          "legendFormat": "Avg Response Time {{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      }
    },
    {
      "id": 5,
      "title": "5xx Error Rate (RPS)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"api\", status=~\"5..\"}[1m])) by (job) or vector(0)",
          "legendFormat": "5xx Errors {{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 6,
      "title": "HTTP Status Codes (RPS)",
      "type": "barchart",
      "gridPos": {
        "h": 8,
        "w": 10,
        "x": 10,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"api\"}[1m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      },
      "options": {
        "minXSpacing": 200,
        "xTickLabelRotation": -45
      }
    },
    {
      "id": 8,
      "title": "Average Request Payload Size (bytes)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(rate(http_request_size_bytes_sum{job=\"api\"}[1m])) by (job) / sum(rate(http_request_size_bytes_count{job=\"api\"}[1m])) by (job)",
          "legendFormat": "Avg Payload Size {{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 9,
      "title": "Active Connections",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 24
      },
      "targets": [
        {
          "expr": "nginx_connections_active{job=\"api\"} or vector(0)",
          "legendFormat": "Active Connections {{job}}"
        }
      ]
    },
    {
      "id": 10,
      "title": "API CPU Usage (%)",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name=\"predict_api_service\"}[1m])) by (name) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "decimals": 2,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "id": 11,
      "title": "API Memory Usage (MB)",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 24
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=\"predict_api_service\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "decimals": 2,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 2.5e8 },
              { "color": "red", "value": 5e8 }
            ]
          },
          "unit": "bytes"
        }
      }
    },
    {
      "id": 13,
      "title": "API Logs",
      "type": "logs",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 },
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{service=~\"auth_api|predict_api\"}",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "Loki"
          }
        }
      ],
      "options": {
        "showLabels": true,
        "showTime": true,
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "wrapLogMessage": false,
        "sortOrder": "Descending"
      }
    }
  ]
}
